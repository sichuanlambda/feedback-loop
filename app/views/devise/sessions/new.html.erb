        .image-column {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-right: 15px;
        }
        .card {
        margin-top: 20px;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Make sure it covers the full viewport height */
            width: 100vw; /* Cover full viewport width */
        }
        .login-container {
            width: 100%; /* Adjust based on desired width, e.g., 600px or 50% */
            max-width: 600px; /* Maximum width */
            margin: 0 auto; /* Centering horizontally */
            padding: 20px; /* Adds some padding inside the border */
