<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <h5 class="card-header text-center" style="color: #01161e;">Change Your Password</h5>
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                        <%= f.hidden_field :reset_password_token %>

                        <div class="form-group">
                            <%= f.label :password, "New password" %>
                            <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %>
                            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
                        </div>

                        <div class="form-group">
                            <%= f.label :password_confirmation, "Confirm new password" %>
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                        </div>

                        <div class="actions text-center">
                            <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="text-center mt-3">
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>