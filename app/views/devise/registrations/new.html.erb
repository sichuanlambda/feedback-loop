<body>
  <div class="container">
    <!-- Registration Form -->
  <div id="registration-form" class="custom-registration-form" style="display: none;">
      <h1>Enter Your Information to Complete Your Registration</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'control-label' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'control-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Field for Handle -->
        <div class="form-group">
          <%= f.label :handle, class: 'control-label' %>
          <%= f.text_field :handle, autocomplete: "handle", class: "form-control" %>
        </div>

        <!-- Field for Public Name -->
        <div class="form-group">
          <%= f.label :public_name, class: 'control-label' %>
          <%= f.text_field :public_name, autocomplete: "public-name", class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Confirm Registration", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!-- Below Registration Form, the rest of the content -->
    <div class="row">
      <!-- Column for the Title, Subtitle, and Image -->
      <div class="col-lg-6 image-column">
        <h2>Learn About and Generate Architecture with AI</h2>
        <h3>Upload & Learn</h3>
        <%= image_tag 'ArchExplorer.png', class: 'img-fluid', style: 'border: 2px solid #bababa; border-radius: 15px;' %>
        <h3>Dream & Generate</h3>
        <%= image_tag 'ArchGen.png', class: 'img-fluid', style: 'border: 2px solid #bababa; border-radius: 15px;' %>
      </div>

      <!-- Stripe Button & Plan Details -->
      <div class="col-md-5 d-flex flex-column align-items-center">
        <div class="plan-card p-4 m-3">
          <div class="text-center mb-3" style="border: 2px solid green; padding: 10px; border-radius: 10px;">
            <h3 class="m-0">Architecture Enthusiast</h3>
            <p class="price m-0">$5/month</p>
          </div>
          <ul class="fa-ul">
            <p class="checkmark">Unlimited Building Image Analyses</p>
            <p class="checkmark">Unlimited Architecture Image Generations</p>
            <p class="checkmark">Screenshot Text Searcher Access</p>
            <p class="checkmark">Unlimited Screenshot Uploads</p>
            <p class="checkmark">Exclusive Access to Architecture Community Features (coming soon)</p>
          </ul>
          <!-- Highlighting the 7-day trial -->
          <div class="text-center mt-4">
            <p style="font-size: 24px; color: orange;"><strong>Try it free for 7 days!</strong></p>
          </div>
          <div class="w-100 text-center mt-4">
            <button id="stripe-checkout-button" class="btn btn-secondary">$5 Monthly</button>
            <button id="annual-plan-button" class="btn btn-secondary">$50 Annualy</button>
          </div>
          <p class="text-center mt-2" style="color: grey; font-size: smaller;">Cancel anytime</p>
        </div>
      </div>
    </div>
  </div>

<script src="https://js.stripe.com/v3/"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const paymentSuccess = urlParams.get('payment_success');

    const signUpButton = document.getElementById('stripe-checkout-button');
    const annualPlanButton = document.getElementById('annual-plan-button');
    const registrationForm = document.getElementById('registration-form');
    // Select other sections you want to hide. Adjust the selector based on your page structure.
    const otherSections = document.querySelectorAll('.image-column, .plan-card');

    if (paymentSuccess === 'true') {
      if (registrationForm) {
        registrationForm.style.display = 'block';
      }
      if (signUpButton) {
        signUpButton.style.display = 'none';
      }
      if (annualPlanButton) {
        annualPlanButton.style.display = 'none';
      }
      // Hide other sections when payment_success=true
      otherSections.forEach(section => {
        section.style.display = 'none';
      });
    }
});

document.getElementById('stripe-checkout-button').addEventListener('click', function() {
  window.location.href = 'https://buy.stripe.com/6oE03C2rm9I59Us3cc';
});

document.getElementById('annual-plan-button').addEventListener('click', function() {
  window.location.href = 'https://buy.stripe.com/14kaIgfe8bQd3w4bIJ';
});
</script>
