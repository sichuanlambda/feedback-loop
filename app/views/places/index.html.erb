  .hero-section {
    padding: 60px 0;
  }
  
  .hero-section h1 {
    font-size: 2.5rem;
  }
  
  .hero-section p {
    font-size: 1.1rem;
  }
  
  .places-content {
    padding: 60px 0;
  }
  
  .places-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .place-card-content {
    padding: 20px;
  }
  
  .place-card-header h3 {
    font-size: 1.4rem;
  }
}
</style> 