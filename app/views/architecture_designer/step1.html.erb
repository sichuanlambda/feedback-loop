            transform: translateY(-50%);
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: white;
            border: 1px solid #e5e7eb;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 5;
            font-size: 18px;
            color: #374151;
            transition: all 0.2s;
        }
        .cg-scroll-arrow:hover { background: #0056b3; color: white; border-color: #0056b3; }
        .cg-scroll-arrow.left { left: -18px; }
        .cg-scroll-arrow.right { right: -18px; }

        .cg-view-all {
            text-align: center;
        }
        .cg-view-all a {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 14px 32px;
            background: #1a1a2e;
            color: white;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 600;
            text-decoration: none;
            transition: background 0.25s, transform 0.2s;
        }
        .cg-view-all a:hover {
            background: #0056b3;
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        @media (max-width: 900px) {
            .cg-layout { grid-template-columns: 1fr; }
            .cg-featured { min-height: 280px; grid-row: span 1; }
            .cg-stacked-img { width: 140px; }
            .city-guides-top { flex-direction: column; align-items: flex-start; gap: 12px; }
            .cg-featured-content h3 { font-size: 22px; }
        }
        @media (max-width: 600px) {
            .cg-stacked-card { flex-direction: column; }
            .cg-stacked-img { width: 100%; height: 160px; }
            .cg-scroll-card { flex: 0 0 170px; }
        }
    </style>
</head>
    <body>
    <% unless user_signed_in? %>
    <div class="main-section">
        <div class="header-content">
            <h1><span>Generate and Understand</span><br><span>Architecture </span><span class="highlight"> in seconds</span></h1>
            <h4>Perfect for...</h4>
            <p>Creating your dream home & finding inspiration</p>
            <p>Mixing influences and styles</p>
            <p>Learning about the architecture around you</p>
            <button type="button" id="navigateButton" class="btn btn-primary" data-url="/users/sign_up">Subscribe for $5/mo</buttonr>
        </div>
        <div class="image-collage-container">
            <%= image_tag 'curved wooden building.png', alt: 'Large Building', class: 'image-collage-large img-fluid' %>
            <%= image_tag 'maximal grand.png', alt: 'Residential Home', class: 'image-collage-medium img-fluid' %>
            <%= image_tag 'bohi int.png', alt: 'Architecture Style', class: 'image-collage-small img-fluid' %>
            <%= image_tag 'cathederal int.jpg', alt: 'Interior Design', class: 'image-collage-small img-fluid' %>
        </div>
    </div>
    <% end %>
    <!-- City Guides Section -->
    <% if @places&.any? %>
    <%
      sorted_places = @places.sort_by { |p| -p.building_analyses_in_place.count }
      featured_place = sorted_places.first
      stacked_places = sorted_places[1..2] || []
      scroll_places = sorted_places[3..] || []
      total_buildings = sorted_places.sum { |p| p.building_analyses_in_place.count }
    %>
    <div class="city-guides-section">
      <div class="city-guides-top">
        <div>
          <h2>City Architecture Guides</h2>
          <p class="cg-subtitle">Notable buildings, styles, and design history in every city</p>
        </div>
        <div class="cg-stats">
          <div class="cg-stat"><span class="cg-stat-val"><%= sorted_places.count %></span><span class="cg-stat-label">Cities</span></div>
          <div class="cg-stat"><span class="cg-stat-val"><%= total_buildings %></span><span class="cg-stat-label">Buildings</span></div>
        </div>
      </div>

      <!-- Featured + 2 Stacked -->
      <div class="cg-layout">
        <% if featured_place %>
          <% fc = featured_place.building_analyses_in_place.count %>
          <% fstyles = featured_place.architectural_styles_summary.first(4) %>
          <%= link_to place_path(featured_place), class: "cg-featured" do %>
            <% if featured_place.best_representative_image.present? %>
              <img src="<%= featured_place.best_representative_image %>" alt="<%= featured_place.name %>" loading="lazy">
            <% end %>
            <div class="cg-featured-overlay"></div>
            <div class="cg-featured-content">
              <span class="cg-featured-badge">Most Explored</span>
              <h3><%= featured_place.name %></h3>
              <p class="cg-featured-meta"><%= fc %> buildings analyzed</p>
              <% if fstyles.any? %>
                <div class="cg-featured-styles">
                  <% fstyles.each do |style, _| %>
                    <span class="cg-style-tag"><%= style.gsub(/\s*\d+%$/, '') %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <% stacked_places.each do |place| %>
          <% sc = place.building_analyses_in_place.count %>
          <% sstyles = place.architectural_styles_summary.first(3) %>
          <%= link_to place_path(place), class: "cg-stacked-card" do %>
            <div class="cg-stacked-img">
              <% if place.best_representative_image.present? %>
                <img src="<%= place.best_representative_image %>" alt="<%= place.name %>" loading="lazy">
              <% end %>
            </div>
            <div class="cg-stacked-body">
              <h4><%= place.name %></h4>
              <p class="cg-card-meta"><%= sc %> buildings analyzed</p>
              <% if sstyles.any? %>
                <div class="cg-card-styles">
                  <% sstyles.each do |style, _| %>
                    <span class="cg-card-pill"><%= style.gsub(/\s*\d+%$/, '') %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Scrollable Row -->
      <% if scroll_places.any? %>
      <div class="cg-scroll-wrapper">
        <div class="cg-scroll-arrow left" onclick="document.getElementById('cg-scroll').scrollBy({left:-440,behavior:'smooth'})">&#8249;</div>
        <div class="cg-scroll-row" id="cg-scroll">
          <% scroll_places.each do |place| %>
            <% rc = place.building_analyses_in_place.count %>
            <% rstyle = place.architectural_styles_summary.first(1) %>
            <%= link_to place_path(place), class: "cg-scroll-card" do %>
              <div class="cg-scroll-card-img">
                <% if place.best_representative_image.present? %>
                  <img src="<%= place.best_representative_image %>" alt="<%= place.name %>" loading="lazy">
                <% end %>
                <span class="cg-count-badge"><%= rc %></span>
              </div>
              <div class="cg-scroll-card-body">
                <h5><%= place.name %></h5>
                <span class="cg-scroll-meta"><%= rstyle.any? ? rstyle.first[0].gsub(/\s*\d+%$/, '') : '' %></span>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="cg-scroll-arrow right" onclick="document.getElementById('cg-scroll').scrollBy({left:440,behavior:'smooth'})">&#8250;</div>
      </div>
      <% end %>

      <div class="cg-view-all">
        <%= link_to places_path do %>
          View All <%= sorted_places.count %> City Guides
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
        <% end %>
      </div>
    </div>
    <% end %>

    <h2>AI-Powered Architecture Design Analysis</h2>
        <div class="container architecture-identifier">
        <div class="row">
            <div class="col-md-12">
                <%= image_tag '3tilesexplanation.png', alt: 'Large Image', class: 'img-fluid large-architecture-image' %>
                            <div class="col text-center">
                <button type="button" id="analyzeButton" class="btn btn-primary" data-url="/architecture_explorer/address_search">Analyze an Image!</button>
            </div>
            </div>
            </div>
        </div>
    </div>
    <!--section with the initial selections-->
    <h2>Generate Your Dream Architecture</h2>
    <div class="container">
        <%= form_with url: '/architecture_designer/step2', method: :get, id: 'options_form' do %>
            <div class="feature-card">
                <div class="card-content text-center">
                    <h3>What Would You Like to Bring to Life?</h3>
                    <div class="options-row">
                        <% ['Residential Home', 'Large Building', 'Interior Design'].each do |option| %>
                            <div class="option-container">
                                <% image_file = case option
                                    when 'Residential Home' then 'residential_home.png'
                                    when 'Large Building' then 'large_building.png'
                                    when 'Interior Design' then 'interior_style.png'
                                    when 'Architecture Style' then 'architecture_style_new.png'
                                    when 'Courtyard Cottages' then 'courtyard_cottages.png'
                                    else 'default.png'
                                end %>
                                <%= image_tag image_file, alt: "#{option} Image", class: 'option-image' %>
                                <%= button_tag type: 'button', class: 'btn option-btn', data: { value: option } do %>
                                    <%= option %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                    <div class="options-row">
                        <% ['Architecture Style', 'Courtyard Cottages'].each do |option| %>
                            <div class="option-container">
                                <% image_file = case option
                                    when 'Residential Home' then 'residential_home.png'
                                    when 'Large Building' then 'large_building.png'
                                    when 'Interior Design' then 'interior_style.png'
                                    when 'Architecture Style' then 'architecture_style_new.png'
                                    when 'Courtyard Cottages' then 'courtyard_cottages.png'
                                    else 'default.png'
                                end %>
                                <%= image_tag image_file, alt: "#{option} Image", class: 'option-image' %>
                                <%= button_tag type: 'button', class: 'btn option-btn', data: { value: option } do %>
                                    <%= option %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                    <%= hidden_field_tag 'selected_option', nil, id: 'selected_option' %>
                </div>
            </div>
        <% end %>
    </div>

      <!-- Latest Images Section -->
    <h2>Latest Creations</h2>
    <div class="container">
        <div class="latest-images-container">
            <div class="latest-images-row" style="display: flex; flex-wrap: wrap; justify-content: space-around;">
                <% @latest_images.each do |image| %>
                <% if image.image_url.present? %>
                    <div class="latest-image-container" style="position: relative;">
                    <%= image_tag image.image_url, alt: "Latest Image", class: "latest-image" %>
                    <p class="timestamp"><%= precise_time_ago_in_words(image.created_at) %> ago</p>
                    </div>
                <% else %>
                    <p>Image not available</p>
                <% end %>
                <% end %>
            </div>
            <div class="next-button-container mt-3 text-center">
                <%= link_to 'Community Creations', user_creations_path, class: 'btn btn-secondary' %>
            </div>
        </div>
    </div>
    <h2>Building Library</h2>
    <div class="container">
        <div class="latest-images-container">
            <div class="latest-images-row" style="display: flex; flex-wrap: wrap; justify-content: space-around;">
                <% @building_library.each do |building| %>
                    <% if building.image_url.present? %>
                        <div class="latest-image-container" style="position: relative;">
                            <%= image_tag building.image_url, alt: "Building Image", class: "latest-image" %>
                            <span class="timestamp"><%= time_ago_in_words(building.created_at) %> ago</span>
                        </div>
                    <% else %>
                        <p>Image not available</p>
                    <% end %>
                <% end %>
            </div>
            <div class="next-button-container mt-3 text-center">
                <%= link_to 'View More Buildings', building_library_path, class: 'btn btn-secondary' %>
            </div>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var optionButtons = document.querySelectorAll('.option-btn');
        optionButtons.forEach(function (btn) {
            btn.addEventListener('click', function () {
                document.getElementById('selected_option').value = this.dataset.value;
                document.getElementById('options_form').submit();
            });
        });

        var navigateButton = document.getElementById('navigateButton');
        if (navigateButton) {
            navigateButton.addEventListener('click', function() {
                window.location.href = this.dataset.url;
            });
        }

        // Add similar event listener for analyzeButton
        var analyzeButton = document.getElementById('analyzeButton');
        if (analyzeButton) {
            analyzeButton.addEventListener('click', function() {
                window.location.href = this.dataset.url;
            });
        }
    });
</script>
</body>
</html>