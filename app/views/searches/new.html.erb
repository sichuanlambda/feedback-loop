<!-- app/views/searches/new.html.erb -->
<%= form_with url: searches_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :query, "Search Query" %>
    <%= form.text_field :query, class: "form-control", placeholder: "Enter your query here..." %>
  </div>
  <div class="form-group">
    <%= form.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>

<% if @results.present? %>
  <h2>Search Results:</h2>
  <ul class="list-group">
    <% @results.each do |result| %>
      <li class="list-group-item"><%= result %></li>
    <% end %>
  </ul>
<% elsif @results.blank? && !@results.nil? %>
  <div class="alert alert-warning">
    No results found for your query.
  </div>
<% end %>

<% if @error.present? %>
  <div class="alert alert-danger"><%= @error %></div>
<% end %>
