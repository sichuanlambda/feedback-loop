<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-4 text-center">Search</h1>
      <%= form_with url: searches_path, method: :post, local: true, class: "mb-4" do |form| %>
        <div class="input-group">
          <%= form.text_field :query, class: "form-control form-control-lg", placeholder: "Enter your query here...", aria: { label: "Search Query" } %>
          <div class="input-group-append">
            <%= form.submit "Search", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>

      <% if @results.present? %>
        <h2 class="mb-3">Search Results:</h2>
        <div class="list-group">
          <% @results.each do |result| %>
            <div class="list-group-item list-group-item-action"><%= result %></div>
          <% end %>
        </div>
      <% elsif @results.blank? && !@results.nil? %>
        <div class="alert alert-warning" role="alert">
          <i class="fas fa-exclamation-triangle mr-2"></i> No results found for your query.
        </div>
      <% end %>

      <% if @error.present? %>
        <div class="alert alert-danger mt-3" role="alert">
          <i class="fas fa-exclamation-circle mr-2"></i> <%= @error %>
        </div>
      <% end %>
    </div>
  </div>
</div>
