<div class="container-fluid">
  <div class="row">
    <!-- Left two-thirds for the current content -->
    <div class="col-md-8">
      <% if @html_content.present? %>
        <%= raw @html_content %>
      <% else %>
        <p>No analysis data available.</p>
      <% end %>
    </div>

    <!-- Right one-third for the image and pills -->
    <div class="col-md-4 img">
        <% if @image_url.present? %>
            <img src="<%= @image_url %>" alt="Submitted Image" class="img-fluid">
            <!-- buttons right under the image -->
            <div class="button-container text-center">
                <%= link_to 'Explore Building Library', '/building_library', class: 'btn-library' %>
                <% if @is_shared %>
                    <%= button_to ' ✅ Shared in Building Library ', remove_from_library_path(id: @building_analysis.id), method: :post, class: 'btn-library' %>
                <% else %>
                    <%= button_to '❌ Removed from the Library', add_to_library_path(id: @building_analysis.id), method: :post, class: 'btn-library' %>
                <% end %>
            </div>
        <% else %>
            <p>No image available.</p>
        <% end %>
        
        <% if @h3_contents.present? %>
            <div class="mt-3">
                <% @h3_contents.each do |h3_content| %>
                    <span class="badge badge-primary"><%= h3_content %></span>
                <% end %>
            </div>
        <% end %>
          <div class="address-container">
                <div class="address-title">Add Building to Map</div>
                <%= form_with model: @building_analysis, url: architecture_explorer_update_path(@building_analysis), method: :patch do |form| %>
                    <div>
                        <%= form.label :address, "Address or City" %>
                        <%= form.text_field :address %>
                        <%= form.submit "Add Location", class: 'btn-address-update' %>
                    </div>
                <% end %>
            </div>

