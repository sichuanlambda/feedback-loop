<script>
  let checkCount = 0;
  const maxChecks = 15; // Adjust based on desired number of tries

  function checkAnalysisStatus() {
    if (checkCount >= maxChecks) {
      console.log('Max check attempts reached.');
      return;
    }

    const analysisId = <%= @building_analysis.id %>;
    fetch(`/architecture_explorer/${analysisId}/status`)
      .then(response => response.json())
      .then(data => {
        if (data.status === 'completed') {
          // Update the page content with the analysis results
          document.querySelector('.col-md-8').innerHTML = data.html_content;
          // Additional updates as before...
        } else {
          // Increment checkCount and re-check the status after a delay
          checkCount++;
          setTimeout(checkAnalysisStatus, 5000);
        }
      })
      .catch(error => console.error('Error checking analysis status:', error));
  }

  document.addEventListener('DOMContentLoaded', checkAnalysisStatus);
</script>
