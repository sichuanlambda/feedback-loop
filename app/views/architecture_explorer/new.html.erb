<div class="container" style="background: #fff; border-radius: 15px; box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.1);">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="text-center">
        <h1 class="mt-5" style="color: #01161e;">Architecture Explorer üèõÔ∏è</h1>
        <p style="color: #01161e;">Upload a building image to learn about it and add it to your library.</p>

        <% if user_signed_in? %>
          <%= form_with url: architecture_explorer_path, local: true, multipart: true, html: { class: "gpt-form-container" } do |form| %>
            <div class="custom-file-upload" style="margin-bottom: 20px;">
              <%= form.file_field :image, direct_upload: true, onchange: "previewImage(event)", class: "custom-file-input" %>
              <label for="image" class="btn btn-primary" style="padding: 10px 20px; margin-top: 10px;">Choose File</label>
            </div>

            <!-- Address with geolocation -->
            <div style="margin-bottom: 15px; text-align: left; max-width: 400px; margin-left: auto; margin-right: auto;">
              <label for="address" style="font-weight: 600; color: #333; font-size: 14px;">Address (optional)</label>
              <div style="display: flex; gap: 8px; margin-top: 4px;">
                <%= form.text_field :address, placeholder: "123 Main St, Denver, CO", style: "flex:1; padding: 8px 12px; border: 1px solid #dee2e6; border-radius: 6px; font-size: 14px;", id: "address-field" %>
                <button type="button" id="geo-fill-btn" style="padding: 6px 12px; border: 1px solid #28a745; background: #fff; color: #28a745; border-radius: 6px; font-size: 13px; cursor: pointer; white-space: nowrap;" title="Use my location">üìç Near Me</button>
              </div>
              <small style="color: #6c757d; font-size: 11px;">Auto-fill from your location or type manually.</small>
            </div>

            <!-- Image Preview -->
            <div id="image-preview-container" class="text-center" style="margin-top: 20px;">
              <img id="image-preview" alt="Image Preview" style="display: none; max-width: 100%; max-height: 500px; margin: auto; border-radius: 5px;"/>
            </div>

            <%= form.submit "Upload and Analyze", class: "btn btn-primary", style: "margin-top: 20px; padding: 10px 20px;" %>
          <% end %>
        <% else %>
          <p>Please <%= link_to 'sign in', new_user_session_path %> to use this feature.</p>
        <% end %>
      </div>
      <div class="text-center" id="loading-text" style="display: none; margin-top: 10px;">
          Please wait, this takes a moment.
      </div>
      <div class="loader"></div> 
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    var form = document.querySelector('.gpt-form-container');
    if (form) {
        form.addEventListener('submit', function() {
            // Display the loader on form submission
            var loader = document.querySelector('.loader');
            var loadingText = document.getElementById('loading-text');
            if (loader && loadingText) {
                loader.style.display = 'block';
                loadingText.style.display = 'block';
            }
        });
    }
});

function previewImage(event) {
    var reader = new FileReader();
    reader.onload = function() {
        var output = document.getElementById('image-preview');
        output.src = reader.result;
        output.style.display = 'block';
    };
    reader.readAsDataURL(event.target.files[0]);
}

// Geolocation address auto-fill
document.getElementById('geo-fill-btn').addEventListener('click', function() {
    var btn = this;
    var field = document.getElementById('address-field');
    if (!navigator.geolocation) { alert('Geolocation not supported.'); return; }
    btn.textContent = '‚è≥';
    navigator.geolocation.getCurrentPosition(function(pos) {
        fetch('https://api.mapbox.com/geocoding/v5/mapbox.places/' + pos.coords.longitude + ',' + pos.coords.latitude + '.json?access_token=<%= @mapbox_access_token || "" %>&types=address&limit=1')
            .then(function(r) { return r.json(); })
            .then(function(data) {
                if (data.features && data.features.length > 0) {
                    field.value = data.features[0].place_name;
                } else {
                    field.value = pos.coords.latitude.toFixed(5) + ', ' + pos.coords.longitude.toFixed(5);
                }
                btn.textContent = 'üìç Near Me';
            }).catch(function() { btn.textContent = 'üìç Near Me'; });
    }, function(err) { alert('Location error: ' + err.message); btn.textContent = 'üìç Near Me'; });
});
</script>