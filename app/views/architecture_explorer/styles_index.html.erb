<% content_for :head do %>
  <title>Architectural Styles — Browse All Styles | Architecture Helper</title>
  <meta name="description" content="Browse <%= @styles_with_counts.size %> architectural styles across <%= @total_buildings %> buildings. Explore Art Deco, Gothic, Brutalist, and more.">
  <meta property="og:title" content="Architectural Styles | Architecture Helper" />
  <meta property="og:description" content="Browse all architectural styles with building counts and examples." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= request.original_url %>" />
<% end %>

<style>
  .styles-hero { padding: 50px 0 30px; text-align: center; background: linear-gradient(135deg, #1a252f 0%, #2d3e50 100%); color: #fff; margin: -24px -15px 40px; }
  .styles-hero h1 { font-size: 2.5rem; font-weight: 700; margin-bottom: 10px; }
  .styles-hero p { font-size: 1.15rem; opacity: 0.85; }
  .breadcrumb-bar { padding: 12px 0; font-size: 0.9rem; }
  .breadcrumb-bar a { color: #0056b3; text-decoration: none; }
  .breadcrumb-bar span { color: #999; margin: 0 6px; }
  .styles-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 20px; margin-bottom: 60px; }
  .style-card { background: #fff; border: 1px solid #e9ecef; border-radius: 12px; padding: 24px; text-decoration: none; color: inherit; transition: transform 0.2s, box-shadow 0.2s; display: flex; flex-direction: column; }
  .style-card:hover { transform: translateY(-3px); box-shadow: 0 8px 24px rgba(0,0,0,0.1); text-decoration: none; color: inherit; }
  .style-card h3 { font-size: 1.15rem; font-weight: 600; color: #1a252f; margin: 0 0 8px; }
  .style-card .count { font-size: 0.9rem; color: #6c757d; }
  .style-card .bar { height: 4px; border-radius: 2px; background: #e9ecef; margin-top: auto; padding-top: 12px; }
  .style-card .bar-inner { height: 4px; border-radius: 2px; background: linear-gradient(90deg, #0056b3, #4dabf7); }
</style>

<div class="breadcrumb-bar">
  <a href="/">Home</a><span>›</span><strong>Styles</strong>
</div>

<div class="styles-hero">
  <h1>Architectural Styles</h1>
  <p>Explore <%= @styles_with_counts.size %> styles across <%= @total_buildings %> analyzed buildings</p>
</div>

<% max_count = @styles_with_counts.first&.last || 1 %>
<div class="styles-grid">
  <% @styles_with_counts.each do |style, count| %>
    <%= link_to style_show_path(style_name: style.parameterize), class: "style-card" do %>
      <h3><%= style %></h3>
      <span class="count"><%= count %> <%= count == 1 ? 'building' : 'buildings' %></span>
      <div class="bar"><div class="bar-inner" style="width: <%= (count.to_f / max_count * 100).round %>%"></div></div>
    <% end %>
  <% end %>
</div>
