<div class="admin-places">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Places Management</h1>
    <%= link_to 'New Place', new_admin_place_path, class: 'btn btn-primary' %>
  </div>

  <% if @places.any? %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Slug</th>
            <th>Coordinates</th>
            <th>Status</th>
            <th>Featured</th>
            <th>Buildings</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @places.each do |place| %>
            <tr>
              <td>
                <strong><%= place.name %></strong>
                <% if place.description.present? %>
                  <br><small class="text-muted"><%= truncate(place.description, length: 50) %></small>
                <% end %>
              </td>
              <td><code><%= place.slug %></code></td>
              <td>
                <%= place.latitude.round(4) %>, <%= place.longitude.round(4) %>
                <% if place.zoom_level.present? %>
                  <br><small class="text-muted">Zoom: <%= place.zoom_level %></small>
                <% end %>
              </td>
              <td>
                <% if place.published? %>
                  <span class="badge badge-success">Published</span>
                <% else %>
                  <span class="badge badge-secondary">Draft</span>
                <% end %>
              </td>
              <td>
                <% if place.featured? %>
                  <span class="badge badge-warning">Featured</span>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td>
                <% building_count = BuildingAnalysis.where(visible_in_library: true)
                                                   .where("LOWER(address) LIKE ? OR LOWER(city) LIKE ?", 
                                                         "%#{place.name.downcase}%", "%#{place.name.downcase}%")
                                                   .count %>
                <%= building_count %>
              </td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to 'View', place_path(place), class: 'btn btn-sm btn-outline-primary', target: '_blank' %>
                  <%= link_to 'Edit', edit_admin_place_path(place), class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to 'Delete', admin_place_path(place), 
                      method: :delete, 
                      class: 'btn btn-sm btn-outline-danger',
                      data: { confirm: 'Are you sure you want to delete this place?' } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No Places Created Yet</h4>
      <p>Start by creating your first place page to showcase architecture in a specific city or region.</p>
      <%= link_to 'Create First Place', new_admin_place_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div> 