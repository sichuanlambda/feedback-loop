<h1>Feedback Dashboard</h1>

<table style="border: 1px solid black;">
  <thead>
    <tr>
      <th>ID</th>
      <th>Comment</th>
      <th>Vote</th>
      <th>Submitted At</th>
    </tr>
  </thead>
  <tbody>
    <% if @feedbacks && !@feedbacks.empty? %>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.id %></td>
          <%# <td><%= feedback.comment || "No Comment" %></td>
          <%# <td><%= feedback.vote ? "Thumbs Up" : "Thumbs Down" %></td>
          <td><%= feedback.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        </tr>  
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">No feedbacks found</td>
      </tr>
    <% end %>
  </tbody>
</table>